@{
    Layout = null;
}
<!doctype html>
<html lang="en">
@await Component.InvokeAsync("_BlogListHeadComponentPartial")
<body>

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    @await Component.InvokeAsync("_BlogListNavbarComponentPartial")
    @await Component.InvokeAsync("_BlogDetailByCoverInfoComponentPartial",new {id=ViewBag.Id})

    <section class="section">
        <div class="container">

            <div class="row blog-entries element-animate">

                <div class="col-md-12 col-lg-8 main-content">

                    @await Component.InvokeAsync("_BlogDetailByBlogContentComponentPartial",new {id=ViewBag.Id})
                    @await Component.InvokeAsync("_BlogDetailCommentComponentPartial", new { id = ViewBag.Id })
                    @await Component.InvokeAsync("_BlogDetailCreateCommentComponentPartial", new {id=ViewBag.Id})
                </div>

                <!-- END main-content -->

                <div class="col-md-12 col-lg-4 sidebar">
                    <div class="sidebar-box search-form-wrap">
                        <form action="#" class="sidebar-search-form">
                            <span class="bi-search"></span>
                            <input type="text" class="form-control" id="s" placeholder="Aranacak kelimeyi giriniz">
                        </form>
                    </div>
                    @await Component.InvokeAsync("_BlogDetailByWriterInfoComponentPartial", new { id = ViewBag.Id })
                    @await Component.InvokeAsync("_BlogDetailGetOtherBlogPostByWriterComponentPartial", new {id=ViewBag.Id} )
                    @await Component.InvokeAsync("_BlogDetailCategoryListComponentPartial")
                    @await Component.InvokeAsync("_BlogDetailTagsComponentPartial")

                </div>
            </div>
    </section>


    <!-- Start posts-entry -->
    @await Component.InvokeAsync("_BlogDetailOtherPostsComponentPartial")
    
    <!-- End posts-entry -->
    @await Component.InvokeAsync("_FooterComponentPartial")
     <!-- /.site-footer -->
    <!-- Preloader -->
    @await Component.InvokeAsync("_ScriptComponentPartial")

</body>
</html>
