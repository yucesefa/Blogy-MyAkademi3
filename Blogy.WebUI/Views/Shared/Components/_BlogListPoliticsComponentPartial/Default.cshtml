@model List<Article>
<section class="section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-sm-6">
                <h2 class="posts-entry-title">Blog Listesi</h2>
            </div>
            <div class="col-sm-6 text-sm-end"><a href="category.html" class="read-more">Hepsini Gör</a></div>
        </div>
    </div>
</section>
<div class="row">
    @foreach (var item in Model)
    {
       
    <div class="col-lg-4 mb-4">
        <div class="post-entry-alt">
            <a href="/Blog/BlogDetail/@item.ArticleId" class="img-link"><img src="@item.CoverImageUrl" style="height:200px;width:400px; margin-left:20px; border-radius:10px" alt="Image" class="img-fluid"></a>
            <div class="excerpt">
                    <h2><a href="/Blog/BlogDetail/@item.ArticleId">@item.Title</a></h2>
                <div class="post-meta align-items-center text-left clearfix">
                    <figure class="author-figure mb-0 me-3 float-start"><img src="@item.Writer.ImageUrl" alt="Image" class="img-fluid"></figure>
                    <span class="d-inline-block mt-1">Yazar :  <a href="#">@item.Writer.NameSurname</a></span>
                    <span>&nbsp;-&nbsp;@item.CreatedDate</span>
                </div>
                <p>@item.Description.Substring(0,200)</p>
                <p><a href="/Blog/BlogDetail/@item.ArticleId" class="read-more">Devamını okuyun..</a></p>
            </div>
        </div>
    </div>
    }

</div>