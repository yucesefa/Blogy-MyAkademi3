@model CreateCommentViewModel
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum bırakın</h3>
    <form action="/Comment/CreateComment" class="p-5 bg-light" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="ArticleID" />
            <label for="name">Adınız</label>
            <input type="text" class="form-control" id="name" asp-for="NameSurname">
        </div>
        @* <div class="form-group">
            <label for="name">Mail Adresiniz</label>
            <input type="email" class="form-control" id="name" asp-for="Mail">
        </div> *@
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea id="message" asp-for="Message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorumu Paylaş" class="btn btn-primary">
        </div>

    </form>
</div>
