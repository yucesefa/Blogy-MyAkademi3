@using Blogy.EntityLayer.Concrete
@model List<Writer>
@{
    ViewData["Title"] = "WriterList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategoriler</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Yazar Adı</th>
                        <th>Görsel</th>
                        <th>Yazar Durum</th>
                        <th>Yazılar</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Yazara Ait Bloglar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.WriterId</td>
                            <td>@item.NameSurname</td>
                            
                            <td>
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@item.ImageUrl">
                                </li>
                            </td>
                            <td>@item.Status</td>
                            <td><a href="/Admin/Writer/DeleteWriter/@item.WriterId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/Writer/UpdateWriter/@item.WriterId" class="btn btn-info">Güncelle</a></td>
                            <td><a href="#" class="btn btn-secondary">Bloglar</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <a href="/Admin/Category/CreateCategory/" class="btn btn-outline-success">Yeni Yazar Girişi</a>
        </div>
    </div>
</div>