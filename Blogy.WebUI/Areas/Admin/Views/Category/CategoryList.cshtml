@using Blogy.EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategoriler</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Kategoriye Ait Bloglar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td><a href="/Admin/Category/RemoveCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a></td>
                            <td><a href="#" class="btn btn-secondary">Bloglar</a></td>
                        </tr>
                    }
                  
                </tbody>
            </table>
            <a href="/Admin/Category/CreateCategory/" class="btn btn-outline-success">Yeni Kategori</a>
        </div>
    </div>
</div>